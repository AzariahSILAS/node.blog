<div class="author">
    <h1 class="author__heading">Hi, im Azariah.</h1>
    <p class="author__body">Web devolper and content creator.</p>
</div>

<img src="/imgs/hero-image.webp" alt="person looking out through window" class="hero-image" width="981" height="528" >
 
<section class="articles">
    <h2 class="article__heading">latest post</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>
            <li>
                <a href="/post/<%= post._id %>">
                    <span><%= post.title %></span>
                    <span class="article__list__date"><%= post.createdAt.toDateString() %></span>
                </a>
            </li>
        <% }) %>
    </ul>

    <a href="#" class="pagination">&lt; view older posts</a>
</section>